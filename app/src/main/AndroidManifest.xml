<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ashley_laptop.recipemine">

    <application
        android:allowBackup="true"
        android:icon="@drawable/fork"
        android:label="Recipe Mine"
        android:roundIcon="@drawable/fork"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.OpeningActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SignUpActivity"></activity>
        <activity android:name=".view.LoginActivity"></activity>
        <activity android:name=".view.MainActivity"></activity>
        <activity android:name=".view.ProfileActivity"></activity>
    </application>

</manifest>